<h1>Grades</h1>
<a href="/">Home</a>
<table border="1" style="width: 100%; text-align: left;">
    <thead>
        <tr>
            <th>Student</th>
            <th>Module</th>
            <th>Grade</th>
        </tr>
    </thead>
    <tbody>
        <% grades.forEach(grade => { %>
            <tr>
                <td><%= grade.student_name %></td>
                <!-- Display the module name or leave blank if undefined -->
                <td><%= grade.module_name || '' %></td>
                <!-- Display the grade or leave blank if null -->
                <td><%= grade.grade !== null ? grade.grade : '' %></td>
            </tr>
        <% }) %>
    </tbody>
</table>